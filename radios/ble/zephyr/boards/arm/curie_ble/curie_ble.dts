/dts-v1/;
#include <nordic/nrf51822.dtsi>

/ {
	model = "Intel Curie BLE";
	compatible = "intel,curie-ble", "nordic,nrf51822-qfaa",
		     "nordic,nrf51822";

	chosen {
		zephyr,console = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};
};

&uart0 {
	current-speed = <1000000>;
	status = "ok";
};
