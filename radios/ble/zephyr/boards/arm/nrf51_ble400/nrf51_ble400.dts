/dts-v1/;
#include <nordic/nrf51822.dtsi>

/ {
	model = "Waveshare BLE400";
	compatible = "waveshare,BLE400", "nordic,nrf51822-qfaa", "nordic,nrf51822";

	chosen {
		zephyr,console = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};
};

&uart0 {
	current-speed = <115200>;
	status = "ok";
};
