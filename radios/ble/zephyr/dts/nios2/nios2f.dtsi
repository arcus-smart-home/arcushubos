#include "skeleton.dtsi"

#define __SIZE_K(x) (x * 1024)

/ {
	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "altera,nios2f";
			reg = <0>;
		};

	};

	flash0: flash@0 {
		reg = <0x00 0xb8000>;
	};

	sram0: memory@400000 {
		device_type = "memory";
		compatible = "mmio-sram";
		reg = <0x400000 0x20000>;
	};

	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "simple-bus";
		ranges;

		uart0: uart@f0008000 {
			compatible = "ns16550";
			reg = <0xf0008000 0x400>;
			label = "UART_0";

			status = "disabled";
		};

	};
};
