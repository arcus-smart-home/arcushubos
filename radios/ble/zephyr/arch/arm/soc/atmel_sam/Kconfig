config SOC_FAMILY_SAM
	bool
	# omit prompt to signify a "hidden" option
	default n

if SOC_FAMILY_SAM

config SOC_FAMILY
	string
	default "atmel_sam"

# Select SoC Part No. and configuration options
gsource "arch/arm/soc/atmel_sam/*/Kconfig.soc"

endif # SOC_FAMILY_SAM
